{
  "name": "maxwellmainsite",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
  "build": "next build",
  "build:local": "next build && pnpm postbuild:autocommit",
  "postbuild:autocommit": "git add . && git diff --cached --quiet && echo No changes to commit || (git commit -m \"chore: auto commit after successful build\" && git push origin HEAD)",
    "build:test": "pnpm run test && next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
  "test": "pnpm run lint && pnpm run typecheck && cross-env NODE_OPTIONS=--max_old_space_size=3072 jest --maxWorkers=50%",
  "test:full": "pnpm run lint && pnpm run typecheck && jest && node scripts/run-lighthouse-if-supported.cjs",
    "test:watch": "jest --watch",
    "e2e": "playwright test",
  "e2e:prod": "pnpm build && cross-env PLAYWRIGHT_PROD=1 playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:report": "playwright show-report",
    "lighthouse": "lhci autorun",
    "lighthouse:collect": "lhci collect",
    "lighthouse:assert": "lhci assert",
    "lighthouse:upload": "lhci upload",
    "lighthouse:manual": "lighthouse http://localhost:3000 --output html --output-path ./lighthouse-report.html",
    "analyze": "ANALYZE=true next build",
    "analyze:server": "cross-env BUNDLE_ANALYZE=server next build",
    "analyze:browser": "cross-env BUNDLE_ANALYZE=browser next build",
  "analyze:full": "node scripts/analyze-bundle.js",
  "avatars:generate": "ts-node scripts/generate-founder-avatars.ts"
  },
  "engines": {
    "node": ">=20.10.0"
  },
  "dependencies": {
    "@vercel/kv": "^3.0.0",
    "next": "15.4.6",
    "openai": "^5.12.2",
    "react": "19.1.0",
  "react-dom": "19.1.0",
  "framer-motion": "^11.2.6"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@lhci/cli": "^0.15.1",
    "@next/bundle-analyzer": "^15.4.6",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.12",
    "@types/jest-axe": "^3.5.9",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/webpack-bundle-analyzer": "^4.7.0",
    "compression-webpack-plugin": "^11.1.0",
    "cross-env": "^10.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^30.0.5",
    "lighthouse": "^12.8.1",
    "tailwindcss": "^4",
    "terser-webpack-plugin": "^5.3.14",
    "ts-jest": "^29.2.5",
  "typescript": "^5",
  "webpack-bundle-analyzer": "^4.10.2",
  "@playwright/test": "^1.47.0"
  }
}
